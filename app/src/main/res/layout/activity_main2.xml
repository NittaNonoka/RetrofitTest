<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/image"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/ic_person_outline_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/image" android:layout_marginTop="24dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_call_black_24dp"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/url" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNumber" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/url"
            android:textSize="18sp" android:autoLink="phone"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_mail_outline_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/imageView5" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mail" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp" android:autoLink="email"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/ic_location_on_black_24dp"
            android:id="@+id/imageView6" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/userText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/locationText" app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginStart="16dp" android:textSize="18sp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/userText" android:layout_marginEnd="8dp"
            android:autoLink="web|map"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/url" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/locationText"
            android:layout_marginStart="16dp" app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:autoLink="web|map"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/image" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>